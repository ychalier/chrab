<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textViewHelpStopService"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="The notification service is currently running in the background. You should be able to close the app."
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStopService"
        app:layout_constraintRight_toRightOf="@id/textViewHelpStopService"
        app:layout_constraintTop_toBottomOf="@id/textViewHelpStopService"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop service"/>


</androidx.constraintlayout.widget.ConstraintLayout>